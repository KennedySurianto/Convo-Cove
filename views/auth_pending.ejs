<%- include("partials/auth_header.ejs") %>
<%- include("partials/auth_subheader.ejs") %>

<div class="container py-4">
    <div class="border border-light p-5 mb-5">
        <h2 class="text-light">Incoming Friend Requests</h2>
        <hr style="color: white;">
        <ul class="list-group rounded-0">
            <% if (locals.pending && pending.length> 0) { %>
                <% pending.forEach((p)=> { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="media">
                            <div class="d-flex align-items-center fw-semibold fs-3">
                                <img src="<%= p.profile_image_url %>" class="me-2 rounded-circle" alt="Friend Avatar" style="width: 40px; height: 40px;">
                                <%= p.username %>
                            </div>
                        </div>
                        <div class="d-flex">
                            <a href="/chat/<%= p.user_id %>" class="btn btn-primary rounded-pill me-2">Chat</a>
                            <form action="/add-friend" method="post">
                                <input type="hidden" name="user_id" value="<%= p.user_id %>">
                                <button type="submit" class="btn btn-success rounded-pill">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check"
                                        viewBox="0 0 16 16">
                                        <path
                                            d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            <% } else { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="media">
                        <div class="media-body">
                            <h5 class="pt-2">You don't have any pending friend requests.</h5>
                            <a href="/users">Start adding now!</a>
                        </div>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<%- include("partials/footer.ejs") %>